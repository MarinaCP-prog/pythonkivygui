#:kivy 2.1.0
<MyGridLayout>
    name:name
    pizza: pizza
    colour: colour

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favourite pizza"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "Favourite colour"
            TextInput:
                id: colour
                multiline: False

        Button:
            text: "Submit"
            font_size:32 
            on_press: root.press()